
# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/linxassess"

# Session Configuration
SESSION_SECRET="your-super-secret-session-key-here-change-this-in-production"

# Server Configuration
NODE_ENV="development"
PORT=5000

# Email Service Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@linxassess.com"
ENABLE_EMAIL_NOTIFICATIONS=true

# AI Services Configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"
GROK_API_KEY="your-grok-api-key-here"

# Replit Object Storage Configuration
PUBLIC_OBJECT_SEARCH_PATHS="/linxassess-public"
PRIVATE_OBJECT_DIR="/linxassess-private"

# Security Settings
MAX_LOGIN_ATTEMPTS=3
SESSION_TIMEOUT_MINUTES=30
PASSWORD_MIN_LENGTH=8
ENABLE_TWO_FACTOR=false

# Test Configuration
DEFAULT_TEST_DURATION_MINUTES=120
MAX_TAB_SWITCHES=3
ENABLE_FULLSCREEN_MODE=true
ALLOW_COPY_PASTE=false
ENABLE_DEVTOOLS_DETECTION=true

# Proctoring Settings
ENABLE_ENHANCED_PROCTORING=true
PROCTORING_SEVERITY_THRESHOLD=5
ENABLE_WEBCAM_MONITORING=false
ENABLE_SCREEN_RECORDING=false

# Performance Settings
MAX_CONCURRENT_TESTS=100
DATABASE_CONNECTION_POOL_SIZE=20
ENABLE_CACHING=true
CACHE_EXPIRATION_SECONDS=3600

# Integration Settings
ENABLE_SLACK_INTEGRATION=false
SLACK_WEBHOOK_URL=""
ENABLE_DISCORD_INTEGRATION=false
DISCORD_WEBHOOK_URL=""

# HR Integration
ENABLE_HR_SYNC=false
HR_API_ENDPOINT=""
HR_API_KEY=""

# Application Settings
SITE_NAME="LinxIQ"
SITE_DESCRIPTION="Engineer-Grade Assessment Platform"
TIMEZONE="UTC"
DATE_FORMAT="MM/DD/YYYY"
ENABLE_MAINTENANCE_MODE=false

# Logging
LOG_LEVEL="info"
ENABLE_ACTIVITY_LOGGING=true
ENABLE_AUDIT_TRAIL=true

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES="pdf,doc,docx,txt,zip"

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=100

# Development/Debug Settings
ENABLE_DEBUG_MODE=false
ENABLE_VERBOSE_LOGGING=false
BYPASS_AUTHENTICATION=false
